<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_siswa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5DD62C">

    <!-- HEADER DENGAN BACKGROUND GELOMBANG -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/gelombang1"
        android:padding="12dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/logo_mitra"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:src="@drawable/logo_mitra"
            android:scaleType="centerCrop"
            android:contentDescription="Logo TPQ" />

        <TextView
            android:id="@+id/tpq_roudlot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/logo_mitra"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="TPQ\nROUDLOTUL ILMI"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:lineSpacingExtra="4sp" />

    </RelativeLayout>

    <!-- TOMBOL BACK DAN JUDUL -->
    <RelativeLayout
        android:id="@+id/title_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="â—€ Back"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:padding="8dp" />

        <TextView
            android:id="@+id/title_detail_siswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Detail Siswa"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- SCROLLVIEW -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_section"
        android:layout_above="@id/bottom_nav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- FOTO PROFIL SISWA -->
            <ImageView
                android:id="@+id/foto_profil"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:src="@drawable/profil"
                android:background="@drawable/circle_white_bg"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:contentDescription="Foto Profil" />

            <!-- KARTU DETAIL SISWA -->
            <LinearLayout
                android:id="@+id/card_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:background="@drawable/rectangle_3"
                android:padding="0dp"
                android:elevation="4dp">

                <!-- ITEM NAMA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:id="@+id/nama_siswa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <!-- DIVIDER -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0" />

                <!-- ITEM NOMOR INDUK -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nomor Induk"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/nomor_induk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textColor="#000000"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- DIVIDER -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0" />

                <!-- ITEM TEMPAT TANGGAL LAHIR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tempat, Tanggal Lahir"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tempat_tanggal_lahir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textColor="#000000"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- DIVIDER -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0" />

                <!-- ITEM JILID -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jilid"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/jilid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textColor="#000000"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- ===================== BOTTOM NAVIGATION ===================== -->
    <View
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_bottom_nav"
        android:elevation="8dp" />

    <!-- Home Button - DIPERBAIKI -->
    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/home"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:contentDescription="Home Button"
        android:elevation="10dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Settings Button - DIPERBAIKI -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="50dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/setting"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:contentDescription="Settings Button"
        android:elevation="10dp"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>