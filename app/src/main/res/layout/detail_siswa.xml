<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_siswa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5DD62C">

    <!-- HEADER DENGAN BACKGROUND GELOMBANG -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/gelombang1"
        android:padding="12dp"
        android:elevation="4dp">

        <LinearLayout
            android:id="@+id/header_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/logo_mitra"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/logo_mitra"
                android:scaleType="centerCrop"
                android:contentDescription="@string/logo_mitra" />

            <TextView
                android:id="@+id/tpq_roudlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="TPQ\nROUDLOTUL ILMI"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:lineSpacingExtra="4sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Tombol Back di bawah logo -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@id/header_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="â—€ Back"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:minHeight="48dp"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <!-- JUDUL DETAIL SISWA -->
    <TextView
        android:id="@+id/title_detail_siswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/detail_siswa"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:elevation="2dp" />

    <!-- SCROLLVIEW -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_detail_siswa"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- FOTO PROFIL SISWA -->
            <ImageView
                android:id="@+id/foto_profil"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/profil"
                android:background="@drawable/circle_white_bg"
                android:padding="26dp"
                android:scaleType="fitCenter"
                android:contentDescription="@string/foto_profil"
                android:elevation="6dp" />

            <!-- KARTU DETAIL SISWA -->
            <LinearLayout
                android:id="@+id/card_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="28dp"
                android:orientation="vertical"
                android:background="@drawable/rectangle_3"
                android:padding="0dp"
                android:elevation="10dp">

                <!-- ITEM NAMA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nama_siswa"
                        android:textColor="#888888"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/nama_siswa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- DIVIDER -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#E8E8E8" />

                <!-- ITEM NOMOR INDUK -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nomor_induk"
                        android:textColor="#888888"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/nomor_induk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                </LinearLayout>

                <!-- DIVIDER -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#E8E8E8" />

                <!-- ITEM TEMPAT TANGGAL LAHIR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tempat_tanggal_lahir"
                        android:textColor="#888888"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tempat_tanggal_lahir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                </LinearLayout>

                <!-- DIVIDER -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#E8E8E8" />

                <!-- ITEM JILID -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/jilid_label"
                        android:textColor="#888888"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/jilid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>