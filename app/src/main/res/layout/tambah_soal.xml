<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tambah_soal"
    android:layout_width="412dp"
    android:layout_height="917dp"
    android:background="#5DD62C"
    android:clipToOutline="true">

    <!-- Header Background -->
    <View
        android:id="@+id/header_background"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gelombang1" />

    <!-- Logo -->
    <View
        android:id="@+id/logo_mitra_"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="23dp"
        android:background="@drawable/logo_mitra" />

    <!-- Judul TPQ -->
    <TextView
        android:id="@+id/tpq_roudlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginTop="30dp"
        android:text="TPQ\nROUDLOTUL ILMI"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        android:lineSpacingExtra="8sp" />

    <!-- Main Container -->
    <View
        android:id="@+id/group_27"
        android:layout_width="350dp"
        android:layout_height="342dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="252dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/rectangle_2" />

    <!-- Soal Ujian Title Background -->
    <View
        android:id="@+id/title_background"
        android:layout_width="350dp"
        android:layout_height="74dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="178dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/rectangle_title_bg" />

    <!-- Soal Ujian Title -->
    <TextView
        android:id="@+id/soal_ujian_"
        android:layout_width="202dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="188dp"
        android:layout_marginLeft="52dp"
        android:gravity="top"
        android:text="Soal Ujian \nJilid I"
        android:textColor="#000000"
        android:textSize="24sp" />

    <!-- Nomor Soal Label -->
    <TextView
        android:id="@+id/nomor_soal"
        android:layout_width="155.91dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="42dp"
        android:gravity="top"
        android:text="Nomor Soal"
        android:textColor="#000000"
        android:textSize="20sp" />

    <!-- Nomor Soal Input Background -->
    <View
        android:id="@+id/nomor_input_bg"
        android:layout_width="335dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="295dp"
        android:layout_marginLeft="37dp"
        android:background="@drawable/rectangle_input" />

    <!-- NOMOR SOAL INPUT (EDIT TEXT) -->
    <EditText
        android:id="@+id/edit_nomor_soal"
        android:layout_width="335dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="295dp"
        android:layout_marginLeft="37dp"
        android:hint="Masukkan Nomor Soal"
        android:textColor="#000000"
        android:textColorHint="#403C3C"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        android:paddingStart="12dp"
        android:paddingTop="10dp"
        android:inputType="number"
        android:maxLines="1" />

    <!-- Soal Label -->
    <TextView
        android:id="@+id/soal"
        android:layout_width="51dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="343dp"
        android:layout_marginLeft="42dp"
        android:gravity="top"
        android:text="Soal"
        android:textColor="#000000"
        android:textSize="20sp" />

    <!-- Soal Input Background -->
    <View
        android:id="@+id/soal_input_bg"
        android:layout_width="335dp"
        android:layout_height="108dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="367dp"
        android:layout_marginLeft="37dp"
        android:background="@drawable/rectangle_input" />

    <!-- SOAL INPUT (EDIT TEXT) -->
    <EditText
        android:id="@+id/edit_soal"
        android:layout_width="335dp"
        android:layout_height="108dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="367dp"
        android:layout_marginLeft="37dp"
        android:hint="Masukkan Soal"
        android:textColor="#000000"
        android:textColorHint="#403C3C"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        android:paddingStart="12dp"
        android:paddingTop="10dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:maxLines="5" />

    <!-- Plus Button -->
    <View
        android:id="@+id/group_45"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="492dp"
        android:layout_marginLeft="337dp"
        android:background="@drawable/rounded_edittext_bg" />

    <View
        android:id="@+id/plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="338dp"
        android:layout_marginTop="492dp"
        android:background="@drawable/plus" />

    <!-- Simpan Button -->
    <View
        android:id="@+id/group_44"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="162dp"
        android:background="@drawable/rectangle_title_bg" />

    <TextView
        android:id="@+id/simpan"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="160dp"
        android:gravity="center_horizontal|top"
        android:text="Simpan"
        android:textColor="#000000"
        android:textSize="22sp" />

    <!-- ========== BOTTOM NAVIGATION ========== -->

    <!-- Navbar Background -->
    <View
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_bottom_nav" />

    <!-- Tombol Home Container -->
    <RelativeLayout
        android:id="@+id/home_button_container"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:focusable="true">

        <View
            android:id="@+id/home_circle"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle_green" />

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:src="@drawable/home"
            android:contentDescription="Home" />

    </RelativeLayout>

    <!-- Tombol Setting Container -->
    <RelativeLayout
        android:id="@+id/setting_button_container"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:focusable="true">

        <View
            android:id="@+id/setting_circle"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle_green" />

        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:src="@drawable/setting"
            android:contentDescription="Settings" />

    </RelativeLayout>
</RelativeLayout>