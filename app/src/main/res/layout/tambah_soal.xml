<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tambah_soal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5DD62C">

    <!-- Header Background -->
    <View
        android:id="@+id/header_background"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gelombang1" />

    <!-- Logo -->
    <View
        android:id="@+id/logo_mitra_"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="23dp"
        android:background="@drawable/logo_mitra" />

    <!-- Judul TPQ -->
    <TextView
        android:id="@+id/tpq_roudlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginTop="30dp"
        android:text="TPQ\nROUDLOTUL ILMI"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        android:lineSpacingExtra="8sp"
        tools:ignore="HardcodedText" />

    <!-- Tombol Back di bawah logo -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/logo_mitra_"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/tombol_kembali"
        android:scaleType="fitCenter"
        android:padding="10dp" />

    <!-- Main Container -->
    <View
        android:id="@+id/group_27"
        android:layout_width="350dp"
        android:layout_height="420dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="282dp"
        android:background="@drawable/rectangle_2" />

    <!-- Soal Ujian Title Background -->
    <View
        android:id="@+id/title_background"
        android:layout_width="350dp"
        android:layout_height="74dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="208dp"
        android:background="@drawable/rectangle_title_bg" />

    <!-- Soal Ujian Title (DYNAMIC - Will be updated by code) -->
    <TextView
        android:id="@+id/soal_ujian_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="218dp"
        android:gravity="top"
        android:text="Soal Ujian\nJILID"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <!-- Bobot Nilai Label -->
    <TextView
        android:id="@+id/bobot_nilai_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="300dp"
        android:layout_marginStart="42dp"
        android:gravity="top"
        android:text="@string/bobot_nilai"
        android:textColor="#000000"
        android:textSize="20sp" />

    <!-- Bobot Nilai Input Background -->
    <View
        android:id="@+id/bobot_input_bg"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="325dp"
        android:background="@drawable/rectangle_input" />

    <!-- BOBOT NILAI INPUT (EDIT TEXT) -->
    <EditText
        android:id="@+id/edit_bobot_nilai"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="325dp"
        android:hint="@string/masukkan_bobot_nilai"
        android:textColor="#000000"
        android:textColorHint="#403C3C"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="10dp"
        android:inputType="number"
        android:maxLines="1"
        android:text="@string/default_bobot"
        android:autofillHints="number"
        android:minHeight="48dp" />

    <!-- Soal Label -->
    <TextView
        android:id="@+id/soal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="385dp"
        android:layout_marginStart="42dp"
        android:gravity="top"
        android:text="@string/soal"
        android:textColor="#000000"
        android:textSize="20sp" />

    <!-- Soal Input Background -->
    <View
        android:id="@+id/soal_input_bg"
        android:layout_width="335dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="410dp"
        android:background="@drawable/rectangle_input" />

    <!-- SOAL INPUT (EDIT TEXT) -->
    <EditText
        android:id="@+id/edit_soal"
        android:layout_width="335dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="410dp"
        android:hint="@string/masukkan_soal"
        android:textColor="#000000"
        android:textColorHint="#403C3C"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        android:paddingStart="12dp"
        android:paddingTop="10dp"
        android:paddingEnd="12dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:maxLines="8"
        android:scrollbars="vertical"
        android:autofillHints="text" />

    <!-- Simpan Button Background -->
    <View
        android:id="@+id/group_44"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="630dp"
        android:background="@drawable/rectangle_title_bg" />

    <!-- Simpan Button -->
    <Button
        android:id="@+id/simpan"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="630dp"
        android:gravity="center"
        android:text="@string/simpan"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:minHeight="48dp" />

</RelativeLayout>