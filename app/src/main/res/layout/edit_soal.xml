<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#5DD62C">

    <RelativeLayout
        android:id="@+id/edit_soal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5DD62C"
        android:paddingHorizontal="8dp">

        <!-- Header Background -->
        <View
            android:id="@+id/gelombang1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/gelombang1"
            android:scaleType="fitXY" />

        <!-- Navigation Icons -->
        <View
            android:id="@+id/choose_page"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/choose_page" />

        <View
            android:id="@+id/cancel"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/cancel" />

        <!-- Title Section -->
        <View
            android:id="@+id/rectangle_8"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@id/gelombang1"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="-30dp"
            android:background="@drawable/rectangle_8" />

        <TextView
            android:id="@+id/jilid_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/rectangle_8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="JILID I"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Question 1 Container -->
        <RelativeLayout
            android:id="@+id/question_container_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rectangle_8"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_1"
            android:padding="16dp">

            <!-- Edit Pencil Icon -->
            <View
                android:id="@+id/edit_pencil_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_pencil" />

            <!-- Question Text with margin to avoid pencil -->
            <TextView
                android:id="@+id/bacakan_kal_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/edit_pencil_1"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:paddingEnd="8dp"
                android:text="Bacakan contoh hukum Izhar dengan benar!"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- INPUT CONTAINER -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bacakan_kal_1"
                android:layout_marginTop="10dp">

                <View
                    android:id="@+id/rectangle_input_1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rectangle_input" />

                <TextView
                    android:id="@+id/berikan_nil_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Berikan nilai....."
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- Question 2 Container -->
        <RelativeLayout
            android:id="@+id/question_container_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_container_1"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_1"
            android:padding="16dp">

            <!-- Edit Pencil Icon -->
            <View
                android:id="@+id/edit_pencil_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_pencil" />

            <!-- Question Text with margin to avoid pencil -->
            <TextView
                android:id="@+id/bacakan_kal_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/edit_pencil_2"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:paddingEnd="8dp"
                android:text="Bacakan contoh hukum Ikhfa' dengan benar!"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- INPUT CONTAINER -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bacakan_kal_2"
                android:layout_marginTop="10dp">

                <View
                    android:id="@+id/rectangle_input_2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rectangle_input" />

                <TextView
                    android:id="@+id/berikan_nil_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Berikan nilai....."
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- Question 3 Container -->
        <RelativeLayout
            android:id="@+id/question_container_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_container_2"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_1"
            android:padding="16dp">

            <!-- Edit Pencil Icon -->
            <View
                android:id="@+id/edit_pencil_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_pencil" />

            <!-- Question Text with margin to avoid pencil -->
            <TextView
                android:id="@+id/bacakan_kal_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/edit_pencil_3"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:paddingEnd="8dp"
                android:text="Bacakan contoh hukum Idgham dengan benar!"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- INPUT CONTAINER -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bacakan_kal_3"
                android:layout_marginTop="10dp">

                <View
                    android:id="@+id/rectangle_input_3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rectangle_input" />

                <TextView
                    android:id="@+id/berikan_nil_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Berikan nilai....."
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- Question 4 Container -->
        <RelativeLayout
            android:id="@+id/question_container_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_container_3"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/rectangle_1"
            android:padding="16dp">

            <!-- Edit Pencil Icon -->
            <View
                android:id="@+id/edit_pencil_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_pencil" />

            <!-- Question Text with margin to avoid pencil -->
            <TextView
                android:id="@+id/bacakan_kal_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/edit_pencil_4"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:paddingEnd="8dp"
                android:text="Bacakan contoh hukum Iqlab dengan benar!"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- INPUT CONTAINER -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bacakan_kal_4"
                android:layout_marginTop="10dp">

                <View
                    android:id="@+id/rectangle_input_4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rectangle_input" />

                <TextView
                    android:id="@+id/berikan_nil_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Berikan nilai....."
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- Navigation Buttons Container -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="16dp">

            <!-- Back Button -->
            <LinearLayout
                android:id="@+id/back_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rectangle_2"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Next Button -->
            <LinearLayout
                android:id="@+id/next_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rectangle_2"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>