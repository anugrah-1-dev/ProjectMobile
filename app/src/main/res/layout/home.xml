<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5DD62C"
    android:clipToOutline="true">

    <!-- Header Background dengan bentuk gelombang -->
    <View
        android:id="@+id/gelombang1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gelombang1" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo_mitra"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo_mitra"
        android:scaleType="centerCrop" />

    <!-- TPQ Title -->
    <TextView
        android:id="@+id/tpq_roudlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/logo_mitra"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        android:text="TPQ\nROUDLOTUL ILMI"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:lineSpacingExtra="4sp" />

    <!-- Menu Cards -->
    <!-- Card 1 - Manajemen Soal -->
    <LinearLayout
        android:id="@+id/card_manajemen_soal"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/rounded_card"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:elevation="8dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/buku"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Manajemen Soal"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- Card 2 - Manajemen Murid -->
    <LinearLayout
        android:id="@+id/card_manajemen_murid"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="205dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/rounded_card"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:elevation="8dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/murid"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Manajemen Murid"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- Card 3 - Akun -->
    <LinearLayout
        android:id="@+id/card_akun"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/rounded_card"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:elevation="8dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/profil"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Akun"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- Card 4 - Histori -->
    <LinearLayout
        android:id="@+id/card_histori"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="205dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/rounded_card"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:elevation="8dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/history"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Histori"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- Bottom Navigation -->
    <View
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_bottom_nav" />

    <!-- Home Button -->
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="40dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/home"
        android:elevation="4dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/home"
            android:tint="#FFFFFF" />

    </LinearLayout>

    <!-- Settings Button -->
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="40dp"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/setting"
        android:elevation="4dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/setting"
            android:tint="#FFFFFF" />

    </LinearLayout>

</RelativeLayout>