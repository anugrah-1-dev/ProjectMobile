<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/histori"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5DD62C">

    <!-- Header Background dengan bentuk gelombang -->
    <View
        android:id="@+id/gelombang1"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:background="@drawable/gelombang1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo_mitra"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo_mitra"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- TPQ Title -->
    <TextView
        android:id="@+id/tpq_roudlot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:text="TPQ\nROUDLOTUL ILMI"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:lineSpacingExtra="2sp"
        app:layout_constraintTop_toTopOf="@id/logo_mitra"
        app:layout_constraintBottom_toBottomOf="@id/logo_mitra"
        app:layout_constraintStart_toEndOf="@id/logo_mitra"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tombol Back di bawah logo -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        android:contentDescription="Tombol Kembali"
        android:scaleType="fitCenter"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/logo_mitra"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- JILID Container (FIXED ID) -->
    <LinearLayout
        android:id="@+id/jilid_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rectangle_histori"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/gelombang1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JILID 1"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Grafik Nilai Title -->
    <TextView
        android:id="@+id/grafik_nilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Grafik Nilai"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/jilid_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search Bar Container -->
    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/search_background"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/grafik_nilai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/search" />

        <TextView
            android:id="@+id/search_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Search..."
            android:textSize="14sp"
            android:textColor="#A49E9E" />

        <ImageView
            android:id="@+id/slider_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/slider" />
    </LinearLayout>

    <!-- ScrollView untuk konten yang bisa di-scroll -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/search_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Chart Container (FIXED) -->
            <FrameLayout
                android:id="@+id/chart_container"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_card"
                android:elevation="8dp">

                <!-- Chart Background -->
                <View
                    android:id="@+id/chart_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00DF82" />

                <!-- Placeholder ImageView (akan diganti dengan LineChart secara dinamis) -->
                <ImageView
                    android:id="@+id/chart_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/chart_placeholder"
                    android:scaleType="fitCenter"
                    android:padding="16dp" />

            </FrameLayout>

            <!-- Table Container with Card Style -->
            <LinearLayout
                android:id="@+id/table_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_card"
                android:elevation="8dp"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Header Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:background="@drawable/button_border"
                        android:gravity="center"
                        android:text="NO"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:background="@drawable/button_border"
                        android:gravity="center"
                        android:text="BULAN"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:background="@drawable/button_border"
                        android:gravity="center"
                        android:text="Rata-rata Nilai"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Data rows akan ditambahkan secara dinamis -->

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Button Container -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- First Row Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="8dp"
                android:text="Edit"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_lihat"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_mulai"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:text="Mulai"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_lihat"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Second Row Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_lihat"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="8dp"
                android:text="Lihat"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_lihat"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_tambah"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:text="Tambah"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_lihat"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>