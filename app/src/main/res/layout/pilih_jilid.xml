<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pilih_jilid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5DD62C">

    <!-- ===================== SCROLLABLE CONTENT ===================== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ===================== TOP HEADER ===================== -->
            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/gelombang1"
                android:padding="12dp"
                android:elevation="4dp"
                android:layout_marginBottom="0dp">

                <!-- Container Logo dan Nama -->
                <LinearLayout
                    android:id="@+id/logo_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/logo_mitra"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logo_mitra"
                        android:scaleType="centerCrop"
                        android:contentDescription="Logo TPQ" />

                    <TextView
                        android:id="@+id/tpq_roudlot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TPQ\nROUDLOTUL ILMI"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center_vertical"
                        android:textColor="#000000" />

                </LinearLayout>

                <!-- Container untuk konten header (jika ada) -->
                <RelativeLayout
                    android:id="@+id/header_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/logo_container"
                    android:layout_marginTop="8dp">
                    <!-- Konten header lainnya bisa ditambahkan di sini -->
                </RelativeLayout>

                <!-- Tombol Back yang sudah diubah -->
                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_below="@id/header_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/transparent"
                    android:minHeight="48dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:text="â—€ Back"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>

            <!-- ===================== LIST JILID ===================== -->
            <LinearLayout
                android:id="@+id/list_jilid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">

                <!-- JILID I -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/jilid_1"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/tv_jilid1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="JILID I"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000" />
                </androidx.cardview.widget.CardView>

                <!-- JILID II -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/jilid_2"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/tv_jilid2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="JILID II"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000" />
                </androidx.cardview.widget.CardView>

                <!-- JILID III -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/jilid_3"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/tv_jilid3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="JILID III"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000" />
                </androidx.cardview.widget.CardView>

                <!-- JILID IV -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/jilid_4"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/tv_jilid4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="JILID IV"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000" />
                </androidx.cardview.widget.CardView>

                <!-- JILID V -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/jilid_5"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/tv_jilid5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="JILID V"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000" />
                </androidx.cardview.widget.CardView>

                <!-- JILID VI -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/jilid_6"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/tv_jilid6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="JILID VI"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000" />
                </androidx.cardview.widget.CardView>

                <!-- AL-QUR'AN -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/alquran"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:id="@+id/tv_alquran"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="AL-QUR'AN"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>