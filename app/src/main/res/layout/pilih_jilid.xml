<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pilih_jilid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5DD62C">

    <!-- ===================== SCROLLABLE CONTENT ===================== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp">

            <!-- ===================== TOP HEADER ===================== -->
            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/gelombang1"
                android:padding="12dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/logo_mitra"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logo_mitra"
                        android:scaleType="centerCrop"
                        android:contentDescription="Logo TPQ" />

                    <TextView
                        android:id="@+id/tpq_roudlot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TPQ\nROUDLOTUL ILMI"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center_vertical"
                        android:textColor="#000000" />

                </LinearLayout>

            </RelativeLayout>

            <!-- ===================== LIST JILID ===================== -->
            <LinearLayout
                android:id="@+id/list_jilid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <!-- JILID I -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/jilid_1"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    cardview:cardCornerRadius="20dp"
                    cardview:cardElevation="8dp"
                    cardview:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="JILID I"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000" />
                </androidx.cardview.widget.CardView>

                <!-- JILID II -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/jilid_2"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    cardview:cardCornerRadius="20dp"
                    cardview:cardElevation="8dp"
                    cardview:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="JILID II"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000" />
                </androidx.cardview.widget.CardView>

                <!-- JILID III -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/jilid_3"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    cardview:cardCornerRadius="20dp"
                    cardview:cardElevation="8dp"
                    cardview:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="JILID III"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000" />
                </androidx.cardview.widget.CardView>

                <!-- JILID IV -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/jilid_4"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    cardview:cardCornerRadius="20dp"
                    cardview:cardElevation="8dp"
                    cardview:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="JILID IV"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000" />
                </androidx.cardview.widget.CardView>

                <!-- JILID V -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/jilid_5"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    cardview:cardCornerRadius="20dp"
                    cardview:cardElevation="8dp"
                    cardview:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="JILID V"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000" />
                </androidx.cardview.widget.CardView>

                <!-- JILID VI -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/jilid_6"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    cardview:cardCornerRadius="20dp"
                    cardview:cardElevation="8dp"
                    cardview:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="JILID VI"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000" />
                </androidx.cardview.widget.CardView>

                <!-- AL-QUR'AN -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/alquran"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    cardview:cardCornerRadius="20dp"
                    cardview:cardElevation="8dp"
                    cardview:cardBackgroundColor="#FFFFFF">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="AL-QUR'AN"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- ===================== BOTTOM NAVIGATION ===================== -->
    <View
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_bottom_nav"
        android:elevation="8dp" />

    <!-- Home Button -->
    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/home"
        android:contentDescription="Home Button"
        android:elevation="10dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Settings Button -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="40dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/setting"
        android:contentDescription="Settings Button"
        android:elevation="10dp"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>