<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_up_mulai"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_1"
    android:clipToOutline="true"
    android:elevation="8dp"
    android:padding="24dp">

    <!-- Judul Dialog -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Data Siswa"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Label "Masukkan Nama" -->
    <TextView
        android:id="@+id/masukkan_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title"
        android:layout_marginTop="20dp"
        android:text="Masukkan Nama"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Input Nama Background -->
    <View
        android:id="@+id/rectangle_nama_bg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/masukkan_nama"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle_input" />

    <!-- Input Nama EditText -->
    <EditText
        android:id="@+id/edit_nama_siswa"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/masukkan_nama"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:hint="Nama lengkap siswa"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#000000"
        android:textColorHint="#666666"
        android:textSize="16sp" />

    <!-- Label "Nomor Induk" -->
    <TextView
        android:id="@+id/nomor_induk_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_nama_siswa"
        android:layout_marginTop="20dp"
        android:text="Nomor Induk"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Input Nomor Induk Background -->
    <View
        android:id="@+id/rectangle_induk_bg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/nomor_induk_label"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle_input" />

    <!-- Input Nomor Induk EditText -->
    <EditText
        android:id="@+id/edit_nomor_induk"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/nomor_induk_label"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:hint="Nomor Induk Siswa"
        android:inputType="number"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#000000"
        android:textColorHint="#666666"
        android:textSize="16sp" />

    <!-- Button Mulai Container -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_nomor_induk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:focusable="true">

        <!-- Button Background -->
        <View
            android:id="@+id/rectangle_mulai_bg"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:background="@drawable/rectangle_title_bg" />

        <!-- Button Text -->
        <TextView
            android:id="@+id/mulai"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="Mulai"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>