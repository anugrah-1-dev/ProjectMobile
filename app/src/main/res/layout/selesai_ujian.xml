<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selesai_ujian"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5DD62C"
    android:clipToOutline="true">

    <!-- Header Background -->
    <View
        android:id="@+id/header_background"
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gelombang1" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo_mitra"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo_mitra"
        android:contentDescription="Logo TPQ" />

    <!-- Judul TPQ -->
    <TextView
        android:id="@+id/tpq_roudlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/logo_mitra"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="TPQ\nROUDLOTUL ILMI"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        android:lineSpacingExtra="5sp" />

    <!-- Kotak Putih Utama -->
    <View
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/rectangle_field" />

    <!-- Pesan Selamat -->
    <TextView
        android:id="@+id/pesan_selamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:gravity="center"
        android:text="Telah Menyelesaikan \nUjian!"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:lineSpacingExtra="8sp" />

    <!-- Field Nama -->
    <View
        android:id="@+id/field_nama"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/rectangle_8" />

    <TextView
        android:id="@+id/nama_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="315dp"
        android:text="Eka Indah Febriyanti"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Field ID -->
    <View
        android:id="@+id/field_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="375dp"
        android:background="@drawable/rectangle_8" />

    <TextView
        android:id="@+id/id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="390dp"
        android:text="20"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Field Nilai -->
    <View
        android:id="@+id/field_nilai"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/rectangle_8" />

    <TextView
        android:id="@+id/nilai_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="465dp"
        android:text="Nilai : 90"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Tombol Selesai -->
    <Button
        android:id="@+id/button_selesai"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="530dp"
        android:background="@drawable/rounded_edittext_bg"
        android:text="Selesai"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- ========== BOTTOM NAVIGATION ========== -->

    <!-- Navbar Background -->
    <View
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_bottom_nav" />

    <!-- Tombol Home -->
    <View
        android:id="@+id/home_container"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="24dp" />

    <View
        android:id="@+id/home_circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle_green"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34.5dp"
        android:layout_marginBottom="26.5dp"
        android:src="@drawable/home"
        android:contentDescription="Home"
        android:clickable="true"
        android:focusable="true" />

    <!-- Tombol Setting -->
    <View
        android:id="@+id/setting_container"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentEnd="true" />

    <View
        android:id="@+id/setting_circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/circle_green"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/settings_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="25.5dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/setting"
        android:contentDescription="Settings"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>